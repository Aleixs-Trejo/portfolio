---
// Props
interface Props {
  icon: { src: string };
  title: string;
  description: string;
};

const { icon, title, description } = Astro.props;
---

<article class="bg-dark-primary border-1 border-gray-primary p-4 rounded-2xl anim-fade-viewport">
  <div class="flex flex-col gap-3 items-center">
    <img
      src={icon.src}
      alt={title}
      class="w-6 h-6 object-contain object-center"
    />
    <h3 class="text-white text-lg font-semibold text-center">{title}</h3>
    <p class="text-white text-sm text-center">{description}</p>
  </div>
</article>