---
// Components
import TechIcon from './TechIcon.astro';

// Props
interface Props {
  img: { src: string };
  title: string;
  description: string;
  href: string;
  iconGithub: { src: string };
  techs: { icon: { src: string }; titleTech: string }[];
};

const { img, title, description, href, iconGithub, techs } = Astro.props;
---

<article class="w-full bg-dark-tertiary border-2 border-gray-primary rounded-2xl anim-fade-viewport">
  <div class="flex flex-col">
    <img
      src={img.src}
      alt={title}
      class="w-full aspect-4/3 object-cover object-center rounded-tl-2xl rounded-tr-2xl"
    />
    <div class="flex flex-col gap-4 items-start p-3">
      <h3 class="text-white text-lg font-semibold">{title}</h3>
      <p class="text-white text-sm">{description}</p>
      <div class="flex items-center gap-3">
        {techs.map(tech => <TechIcon {...tech} />)}
      </div>
      <a href={href} class="w-full text-xs rounded-lg p-1 bg-gray-primary flex items-center justify-center gap-2 text-white" target="_blank" rel="noopener noreferrer">
        <img src={iconGithub.src} alt="Github" class="w-8 h-8 object-contain object-center" />
        Ver en Github
      </a>
    </div>
  </div>
</article>
