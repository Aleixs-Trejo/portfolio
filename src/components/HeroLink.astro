---
// Props
interface Props {
  icon: { src: string };
  title: string;
  href: string;
  download?: boolean;
}

const { icon, title, href, download } = Astro.props;
---

<a href={href} class="w-10 h-10 flex items-center justify-center anim-fade-viewport" download={download} title={title} target="_blank" rel="noreferrer noopener">
  <img src={icon.src} alt={title} class="w-full h-auto object-contain" />
</a>
